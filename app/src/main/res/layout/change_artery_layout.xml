<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_size_20"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/left_hand_artery_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/artery_enroll_box_layout"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_size_20"
                android:paddingBottom="@dimen/dp_size_20">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_size_30"
                    android:layout_height="@dimen/dp_size_30"
                    android:layout_gravity="center"
                    android:src="@drawable/left_hand_icon" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_size_10"
                    android:text="@string/sign_in_artery_enroll_left_hand"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_size_15" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/right_hand_artery_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_5"
                android:layout_weight="1"
                android:background="@drawable/artery_enroll_box_layout"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_size_20"
                android:paddingBottom="@dimen/dp_size_20">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_size_30"
                    android:layout_height="@dimen/dp_size_30"
                    android:layout_gravity="center"
                    android:src="@drawable/right_hand_icon" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_size_10"
                    android:text="@string/sign_in_artery_enroll_right_hand"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_size_15" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
</layout>
